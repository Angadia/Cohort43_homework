      <h1>Sign In</h1>
      <%= form_tag session_path do %>
        <div class="form-group">
          <%= label_tag :email %>
          <%= email_field_tag :email, nil, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, class: "form-control" %>
        </div>
        <div>
          <%= submit_tag "Log In", class: "btn btn-outline-primary btn-lg" %>
        </div>
      <% end %>