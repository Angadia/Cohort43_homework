<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  
    <%= tag.header class: %w( header ) do %>
      <%= tag.nav class: %w( navbar navbar-expand bg-light ) do %>
        <%= link_to "Blog On Rails", root_path, class: "navbar-brand" %>
        <%= content_tag :ul, class: "navbar-nav" do %>
          <% if user_signed_in? %>
            <%= content_tag :li, class: "nav-item" do %>
              <%= link_to current_user.name, root_path, class: "nav-link" %>
            <% end %>
            <%= content_tag :li, class: "nav-item" do %>
              <%= link_to "Sign Out", session_path, data: { turbo_method: :delete }, class: "nav-link" %>
            <% end %>
          <% else %>
            <%= content_tag :li, class: "nav-item" do %>
              <%= link_to "Sign In", new_session_path, class: "nav-link" %>
            <% end %>
            <%= content_tag :li, class: "nav-item" do %>
              <%= link_to "Sign Up", new_user_path, class: "nav-link" %>
            <% end %>
          <% end %>
          <%= content_tag :li, class: "nav-item" do %>
            <%= link_to "Home", root_path, class: "nav-link" %>
          <% end %>
          <%= content_tag :li, class: "nav-item" do %>
            <%= link_to "New Post", new_post_path, class: "nav-link" %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    
    <% flash.each do |type, message| %>
      <div class="alert alert-primary" role="alert">
        <%= message %>
      </div>
    <% end %>

    <%= tag.main class: %w( main container.fluid ) do %>
      <%= yield %>
    <% end %>

  </body>
</html>
