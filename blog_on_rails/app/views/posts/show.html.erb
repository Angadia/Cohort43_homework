        <div class="card border-0">
          <div class="card-body">
            <h5 class="card-title"><%= @post.title %></h5>
            <p class="card-text"><%= @post.body %></p>
            <small><p>Posted <%= time_ago_in_words(@post.updated_at) %> ago</p></small>
            <%= link_to("Edit", edit_post_path(@post), class: "btn btn-outline-primary btn-md") %>
            <%= link_to("Delete", post_path(@post), data: { turbo_method: :delete,turbo_confirm: "Are you sure?" }, class: "btn btn-outline-primary btn-md") %>
          </div>
        </div>
