        <div class="post card border-0">
          <div class="card-body">
            <h1 class="card-title"><%= @post.title %></h1>
            <p class="card-text"><%= @post.body %></p>
            <small><p>Posted <%= time_ago_in_words(@post.updated_at) %> ago</p></small>
            <%= link_to("Edit", edit_post_path(@post), class: "btn btn-outline-primary btn-md") %>
            <%= link_to("Delete", post_path(@post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-primary btn-md") %>

            <%= form_with(model: @comment, url: post_comments_path(@post)) do |form| %>
              <div class="form_group">
                <h5><%= form.label :comment, for: :body %></h5>
                <%= form.text_area :body, cols: 50, rows: 3, placeholder: "What's on your mind?", class: "form-control", required: "required" %>
              </div>
              <%= hidden_field_tag(:post_id, @post.id) %>
              <%= form.submit "Submit", class: "btn btn-outline-primary btn-lg" %>
            <% end %>

            <%= tag.comments class: %w( comments ) do %>
              <% @post.comments.each do |comment| %>
                <div class="card border-0">
                  <div class="card-body">
                    <p class="card-text"><%= comment.body %></p>
                    <small>Commented <%= time_ago_in_words(comment.created_at) %> ago</small>
                    â€¢
                    <%= link_to("Delete", comment_path(comment), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "card-link") %>
                  </div>
                </div>
              <% end %>
            <% end %>

          </div>
        </div>
