      <h1>Update profile</h1>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", required: :required %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", required: :required %>
          <% if @user&.errors&.where(:email) %>
            <p class="field_with_errors"><%= @user.errors.full_messages_for(:email).join(', ') %></p>
          <% end %>
        </div>
        <%= f.submit class: "btn btn-outline-primary btn-lg" %>
      <% end %> 